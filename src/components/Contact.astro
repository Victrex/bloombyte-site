---
import config from '../../public/config.json';
const { social } = config;
---

<section id="contact" class="py-20 bg-white relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-block bg-gradient-to-r from-pink-500 to-orange-500 text-white px-6 py-2 rounded-full text-sm font-black mb-6 uppercase tracking-wide">
        CONTÁCTANOS
      </div>
      <h2 class="text-4xl md:text-6xl font-black text-gray-900 mb-6">
        ¡Estamos para
        <span class="bg-gradient-to-r from-pink-500 to-orange-500 bg-clip-text text-transparent">
          servirte!
        </span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        ¿Tienes alguna pregunta o quieres hacer un pedido especial? No dudes en contactarnos
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Info -->
      <div class="order-2 lg:order-1">
        <div class="bg-gray-50 rounded-3xl shadow-xl p-8 border-2 border-gray-100">
          <h3 class="text-2xl font-black text-gray-900 mb-8 uppercase tracking-wide">INFORMACIÓN DE CONTACTO</h3>
          
          <!-- Contact Methods -->
          <div class="space-y-6">
            <a href={`https://wa.me/${social.whatsapp}`} class="contact-item flex items-center gap-4 p-6 rounded-2xl hover:bg-white transition-all duration-300 group border-2 border-transparent hover:border-green-200 hover:shadow-lg">
              <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-green-600 rounded-full flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </div>
              <div>
                <p class="font-black text-lg text-gray-900 uppercase tracking-wide">WHATSAPP</p>
                <p class="text-gray-600 font-medium">Ordena directamente</p>
              </div>
            </a>
            
            <a href={`mailto:${social.email}`} class="contact-item flex items-center gap-4 p-6 rounded-2xl hover:bg-white transition-all duration-300 group border-2 border-transparent hover:border-pink-200 hover:shadow-lg">
              <div class="w-16 h-16 bg-gradient-to-r from-pink-400 to-pink-600 rounded-full flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-black text-lg text-gray-900 uppercase tracking-wide">EMAIL</p>
                <p class="text-gray-600 text-sm font-medium">{social.email}</p>
              </div>
            </a>
          </div>
          
          <!-- Social Media -->
          <div class="mt-8 pt-8 border-t-2 border-gray-200">
            <h4 class="font-black text-gray-900 mb-6 uppercase tracking-wide">SÍGUENOS EN REDES</h4>
            <div class="flex gap-4">
              <a href={social.instagram} target="_blank" rel="noopener noreferrer" class="social-link w-14 h-14 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white hover:shadow-xl transform hover:scale-110 transition-all">
                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                </svg>
              </a>
              <a href={social.facebook} target="_blank" rel="noopener noreferrer" class="social-link w-14 h-14 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full flex items-center justify-center text-white hover:shadow-xl transform hover:scale-110 transition-all">
                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href={social.tiktok} target="_blank" rel="noopener noreferrer" class="social-link w-14 h-14 bg-gradient-to-r from-gray-800 to-black rounded-full flex items-center justify-center text-white hover:shadow-xl transform hover:scale-110 transition-all">
                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Order Form -->
      <div class="order-1 lg:order-2">
        <div class="bg-gray-50 rounded-3xl shadow-xl p-8 border-2 border-gray-100">
          <h3 class="text-2xl font-black text-gray-900 mb-8 uppercase tracking-wide">HAZ TU PEDIDO</h3>
          
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-black text-gray-700 mb-3 uppercase tracking-wide">
                NOMBRE COMPLETO
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full px-6 py-4 rounded-2xl border-2 border-gray-200 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 transition-all font-medium bg-white"
                placeholder="Tu nombre"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-black text-gray-700 mb-3 uppercase tracking-wide">
                TELÉFONO
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required 
                class="w-full px-6 py-4 rounded-2xl border-2 border-gray-200 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 transition-all font-medium bg-white"
                placeholder="+504 0000-0000"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-black text-gray-700 mb-3 uppercase tracking-wide">
                MENSAJE
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                class="w-full px-6 py-4 rounded-2xl border-2 border-gray-200 focus:border-pink-500 focus:ring-2 focus:ring-pink-200 transition-all resize-none font-medium bg-white"
                placeholder="¿Qué roles te gustaría ordenar?"
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-pink-500 to-orange-500 text-white font-black py-5 rounded-2xl hover:shadow-xl transform hover:scale-105 transition-all duration-300 uppercase tracking-wide text-lg"
            >
              ENVIAR PEDIDO
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Process Steps -->
    <div class="mt-20">
      <h3 class="text-3xl font-black text-center text-gray-900 mb-12 uppercase tracking-wide">
        ¿CÓMO 
        <span class="bg-gradient-to-r from-pink-500 to-orange-500 bg-clip-text text-transparent">
          ORDENAR?
        </span>
      </h3>
      <div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-4 max-w-4xl mx-auto">
        {[
          { step: "1", title: "ELIGE", desc: "Selecciona tus roles favoritos", icon: "🥐" },
          { step: "2", title: "ORDENA", desc: "Envía tu pedido por WhatsApp", icon: "📱" },
          { step: "3", title: "RECIBE", desc: "Disfruta en casa o recoge", icon: "🏠" }
        ].map((item, index) => (
          <>
            <div class="process-step text-center">
              <div class="w-20 h-20 bg-gradient-to-r from-pink-500 to-orange-500 rounded-full flex items-center justify-center text-white font-black text-2xl mx-auto mb-4 shadow-xl">
                {item.step}
              </div>
              <div class="text-4xl mb-3">{item.icon}</div>
              <h4 class="font-black text-xl text-gray-900 mb-2 uppercase tracking-wide">{item.title}</h4>
              <p class="text-sm text-gray-600 font-medium">{item.desc}</p>
            </div>
            {index < 2 && (
              <div class="hidden md:block">
                <svg class="w-8 h-8 text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            )}
          </>
        ))}
      </div>
    </div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-10 right-10 w-20 h-20 bg-pink-200 rounded-full opacity-20"></div>
  <div class="absolute bottom-10 left-10 w-16 h-16 bg-orange-200 rounded-full opacity-20"></div>
</section>

<script>
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const name = formData.get('name');
      const phone = formData.get('phone');
      const message = formData.get('message');
      
      // Construir mensaje de WhatsApp
      const whatsappMessage = `¡Hola! Soy ${name}.\n\nTeléfono: ${phone}\n\nMensaje: ${message}`;
      const encodedMessage = encodeURIComponent(whatsappMessage);
      
      // Abrir WhatsApp
      window.open(`https://wa.me/${import.meta.env.PUBLIC_WHATSAPP_NUMBER}?text=${encodedMessage}`, '_blank');
      
      // Limpiar formulario
      form.reset();
      
      // Mostrar mensaje de éxito
      alert('¡Tu pedido ha sido enviado! Te contactaremos pronto.');
    });
  });
</script>
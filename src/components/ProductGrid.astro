---
import CatalogProductCard from './CatalogProductCard.astro';

export interface Props {
  products: Array<{
    id: number;
    name: string;
    description: string;
    price: number;
    category: string;
    image_url?: string;
    is_popular?: boolean;
  }>;
}

const { products } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" id="products-grid">
  {products.map((product) => (
    <div 
      class="product-grid-item" 
      data-category={product.category}
      data-name={product.name}
      data-description={product.description}
    >
      <CatalogProductCard product={product} />
    </div>
  ))}
</div>

{products.length === 0 && (
  <div class="text-center py-20">
    <div class="text-6xl mb-4">ü•ê</div>
    <h3 class="text-2xl font-bold text-gray-800 mb-2">
      No hay productos disponibles
    </h3>
    <p class="text-gray-600">
      Vuelve pronto, estamos preparando deliciosos roles para ti.
    </p>
  </div>
)}

<style>
  .product-grid-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  .product-grid-item:nth-child(1) { animation-delay: 0.1s; }
  .product-grid-item:nth-child(2) { animation-delay: 0.2s; }
  .product-grid-item:nth-child(3) { animation-delay: 0.3s; }
  .product-grid-item:nth-child(4) { animation-delay: 0.4s; }
  .product-grid-item:nth-child(5) { animation-delay: 0.5s; }
  .product-grid-item:nth-child(6) { animation-delay: 0.6s; }
  .product-grid-item:nth-child(7) { animation-delay: 0.7s; }
  .product-grid-item:nth-child(8) { animation-delay: 0.8s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>